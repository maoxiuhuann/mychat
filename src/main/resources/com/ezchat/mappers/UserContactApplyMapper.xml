        <if test="query.applyInfo != null and query.applyInfo != ''">
            and apply_info = #{query.applyInfo}
        </if>
    </sql>

    <!--扩展查询条件-->
    <sql id="base_query_condition_extend">
        <if test="query.applyUserIdFuzzy != null and query.applyUserIdFuzzy != ''">
