	</delete>

	<!--根据UserIdAndContactId查询数据-->
	<select id="selectByUserIdAndContactId" resultMap="base_result_map">
		select <include refid="base_column_list"/> from chat_session_user where user_id=#{userId} and contact_id=#{contactId}
	</select>

